template(name="ranking")
  div.chat.well
    unless currentUser
      +splash
    else
      .highscores
        h2 Standings
        hr.star-well
        each this.standings
          p #{rank}. #{name} (#{value})
        br
        h2 Most games played
        hr.star-well
        each this.mostPlayed
          p #{rank}. #{name} (#{value})
        br
        h2 Most games won
        hr.star-well
        each this.mostWon
          p #{rank}. #{name} (#{value})
        br
